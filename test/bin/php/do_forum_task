#! /bin/bash
TASK_KEY=$(php <<'EOD'
<?php require 'conf_global.php'; extract($INFO); $p = intval($sql_port);
echo ((new mysqli( $sql_host, $sql_user, $sql_pass, $sql_database, $p, NULL))->
          query("select conf_value from core_sys_conf_settings
                  where conf_key='task_cron_key'")->fetch_row()[0]);
EOD
)
php -d memory_limit=-1 -d max_execution_time=0 \
    applications/core/interface/task/task.php $TASK_KEY